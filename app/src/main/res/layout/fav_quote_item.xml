<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvFavQuoteItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_card_gradient"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvFavQuote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/varela"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            tools:text="Â¿Es posible estar libre de cometer errores? De ninguna manera, pero si es posible ser una persona que se esfuerza para evitarlos" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            app:dividerColor="@color/white" />

        <TextView
            android:id="@+id/tvFavAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/varela"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            android:textStyle="italic"
            tools:text="Epiceto" />

    </LinearLayout>

</androidx.cardview.widget.CardView>